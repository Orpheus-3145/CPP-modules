SHELL := /bin/bash

SOURCES := $(wildcard *.cpp)
EXE := PmergeMe

PP := g++
PP_FLAGS := -Wall -Wextra -Werror -Wshadow -Wpedantic  -g3 -fsanitize=address

GREEN = \x1b[32;01m
RED = \x1b[31;01m
RESET = \x1b[0m

all: $(SOURCES)
	@$(PP) $(PP_FLAGS) $(DEBUG_FLAGS) $(SOURCES) -o $(EXE)
	@printf "(C++ 09) $(GREEN)Created program $(EXE)$(RESET)\n"

run: all
	@clear
	@./$(EXE) "26671 7535 32854 67945 22867 55511 62796 86800 76383 13593 18253 68761 55760 44216 7086 29815 43318 712 18166 27587 27448 52437 51781 10933 25394 43878 34400 10673 65177 40192 38518 90416 4693 65412 68943 53056 54978 80767 43993 13648 29376 97975 60809 84668 34409 68670 1414 17893 67237 87065 67518 39794 20840 57315 46396 16307 53763 8392 47668 68622 5985 85937 29967 93191 48034 81562 41706 67728 25016 83108 41972 73929 18920 60198 67175 37304 78042 18856 77918 86957 95901 18630 41036 49166 36923 24909 3486 65859 49474 61404 84361 47604 48455 64186 76569 28501 43975 64429 13960 74029"

clean:
	@rm -f $(EXE)
	@rm -f *.replace
	@printf "(C++ 09) $(RED)Removed program $(EXE)$(RESET)\n"

re: clean all	